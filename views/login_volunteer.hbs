
{{! /login }}

<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>


<div class="container-fluid">
 <div class="row">
   <div class="col-md-6 col-md-offset-3">
     <h1 class="title-post">{{title}}</h1>
     <h4 class="header-post">Log In</h4>
     <form class="post-blog-form" action="/login/volunteer" method="POST">
       <ul>
         <li>
           <label for="user_name">Username</label>
           <input type="text" name="user_name" placeholder="John Smith" require>
         </li>
         <li>
           <label for="password">Enter Password</label>
           <input type="password" name="password" placeholder="************" require>
         </li>
         <li>
           <input type="submit" class="submit-btn" name="loginVolSubmit" value="Submit" require>
         </li>
       </ul>
     </form>
   </div>
 </div>
</div>
